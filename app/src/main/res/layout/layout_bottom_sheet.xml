<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:padding="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_bottomSheet_sanPham"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/item"/>

        <TextView
            android:id="@+id/tv_bottomSheet_title"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/img_bottomSheet_sanPham"
            android:layout_height="30dp"
            android:text="whey store"
            android:textStyle="bold"
            android:textSize="19dp"
            />

        <TextView
            android:id="@+id/tv_bottomSheet_coin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_bottomSheet_title"
            android:layout_toRightOf="@+id/img_bottomSheet_sanPham"
            android:gravity="center"
            android:text="1.350.000 vnd"
            android:textColor="#F44336"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_bottomSheet_weight"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/tv_bottomSheet_title"
            android:text="4.5kg"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/linearLayout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tv_bottomSheet_coin"
            android:layout_toRightOf="@+id/img_bottomSheet_sanPham"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bottomSheet_giam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginLeft="12dp"
                android:text="-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bottomSheet_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                android:text="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bottomSheet_tang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginLeft="12dp"
                android:text="+"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bottomSheet_coinSum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout_type"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/tv_bottomSheet_send"
            android:gravity="center"
            android:text="1.350.000 vnd"
            android:textColor="#F44336"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_bottomSheet_send"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout_type"
            android:layout_alignParentEnd="true"
            android:background="@drawable/boder_brand"
            android:gravity="center"
            android:text="Thêm vào \n giỏ hàng"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="155dp">
            <TextView
                android:id="@+id/tv_itemThongKe_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:text="1"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tv_itemThongKe_img"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_toRightOf="@+id/tv_itemThongKe_id"
                android:src="@drawable/item" />


            <TextView
                android:id="@+id/tv_itemThongKe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/tv_itemThongKe_img"
                android:text="mass ganner"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#ea7232"/>

            <TextView
                android:id="@+id/tv_itemThongKe_nhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_itemThongKe_name"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/tv_itemThongKe_img"
                android:text="số lượng nhập : 100"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_itemThongKe_xuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_itemThongKe_img"
                android:layout_below="@+id/tv_itemThongKe_nhap"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="số lượng xuất : 34"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/tv_itemThongKe_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_itemThongKe_xuat"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/tv_itemThongKe_img"
                android:text="giá tiền : 1.200.000 vnd"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ec1904"/>

            <TextView
                android:id="@+id/tv_itemThongKe_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_itemThongKe_coin"
                android:layout_toRightOf="@+id/tv_itemThongKe_img"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="120 view"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
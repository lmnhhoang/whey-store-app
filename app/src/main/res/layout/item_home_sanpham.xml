<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_itemHome"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="155dp">

            <FrameLayout
                android:id="@+id/layout_img_home"
                android:layout_width="wrap_content"
                android:layout_height="155dp"
                >

                <ImageView
                    android:id="@+id/img_itemHome_img1"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/item" />

                <ImageView
                    android:id="@+id/img_itemHome_hetHang"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hethang" />

            </FrameLayout>


            <TextView
                android:id="@+id/tv_itemHome_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/layout_img_home"
                android:text="Zoneprot SUPER MASS GAINER 5,4 KG DYMATIZE"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_itemHome_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_itemHome_title"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/layout_img_home"
                android:text="1280 Calories,52G Protein,252g Carbohydrate."
                android:textSize="12dp" />


            <TextView
                android:id="@+id/tv_itemHome_from"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_itemHome_info"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/layout_img_home"
                android:background="@drawable/boder_light_item_home"
                android:padding="2dp"
                android:text="USA"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_itemHome_from"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/layout_img_home"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_itemHome_type_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/type" />

                <ImageView
                    android:id="@+id/img_itemHome_type_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/type" />

                <ImageView
                    android:id="@+id/img_itemHome_type_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/type" />

                <ImageView
                    android:id="@+id/img_itemHome_type_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/type" />

                <ImageView
                    android:id="@+id/img_itemHome_type_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/type" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_itemHome_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_type"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@+id/layout_img_home"
                android:text="1.800.000 Ä‘"
                android:textColor="#ec1904"
                android:textSize="18dp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/LinearLayout_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_delete_item"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/img_edit_item"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
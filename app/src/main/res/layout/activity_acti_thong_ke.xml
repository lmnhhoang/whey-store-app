<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="9dp"
    tools:context=".Ui.Tab.Acti_thongKe">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_Acti_thongKe_coinMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_newPost_phone"
                android:background="@drawable/boder_info"
                android:padding="9dp"
                android:text="Giá cao nhất"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_Acti_thongKe_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_newPost_phone"
                android:background="@drawable/boder_thongke_old"
                android:padding="9dp"
                android:layout_marginLeft="9dp"
                android:text="Lượt Xem"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_Acti_thongKe_mua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_newPost_phone"
                android:background="@drawable/boder_thongke_old"
                android:padding="9dp"
                android:layout_marginLeft="9dp"
                android:text="Lượt Mua"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_Acti_thongKe_HoaDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_newPost_phone"
                android:background="@drawable/boder_thongke_old"
                android:padding="9dp"
                android:layout_marginLeft="9dp"
                android:text="Doanh Thu"
                android:textColor="@color/white" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_Acti_DonHang_thongTinDonHang"
            android:background="#ea7232" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_Acti_thongKe_doanhThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_Acti_thongKe_sanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_ngaybdau"
                android:src="@android:drawable/ic_menu_agenda"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#ea7232"
                android:gravity="center_vertical"
                android:text="Chọn ngày bắt đầu"
                android:textSize="18dp"
                android:id="@+id/tv_Acti_thongKe_thongkeDay1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_ngaykthuc"
                android:src="@android:drawable/ic_menu_agenda"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#ea7232"
                android:gravity="center_vertical"
                android:text="Chọn ngày kết thúc"
                android:textSize="18dp"
                android:id="@+id/tv_Acti_thongKe_thongkeDay2"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Thống Kê"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:id="@+id/btn_Acti_thongKe_thongKeDoanhThu"
            android:layout_marginTop="9dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:textColor="#ea7232"
            android:gravity="center"
            android:id="@+id/tv_doanhthu"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Doanh thu: "/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RecyclerView_thongKe"/>
    </LinearLayout>



</ScrollView>
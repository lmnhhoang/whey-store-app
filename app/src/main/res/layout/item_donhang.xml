<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="169dp">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_item_donHang"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:src="@drawable/item" />

            <TextView
                android:id="@+id/tv_item_donHang_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/img_item_donHang"
                android:text="WheyStore"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_donHang_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_donHang_title"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_item_donHang"
                android:text="1.800.000 vnd"
                android:textColor="#F44336"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_item_donHang_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_donHang_title"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/tv_item_donHang_coin"
                android:text="Số Lượng 3"
                android:textColor="#FF9800"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_item_donHang_nameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_donHang_coin"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_item_donHang"
                android:text="Nguyễn Hoàng lâm"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_item_donHang_phoneUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/img_item_donHang"
                    android:layout_below="@+id/tv_item_donHang_nameUser"
                    android:textStyle="bold"
                    android:text="0962540232"/>


            <TextView
                android:id="@+id/tv_item_donHang_adressUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_donHang_phoneUser"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_item_donHang"
                android:text="duy nhat-vu thu-thai binh" />

            <ImageView
                android:id="@+id/img_item_donHang_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"
                android:layout_marginTop="12dp"
                android:src="@android:drawable/ic_menu_delete" />

            <ImageView
                android:id="@+id/img_item_donHang_send"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/img_item_donHang_delete"
                android:layout_alignParentEnd="true"
                android:src="@drawable/danggiaohang" />

            <TextView
                android:id="@+id/img_item_donHang_coinRe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_donHang_adressUser"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_item_donHang"
                android:text="1.800.000 vnd"
                android:textColor="#FF5722" />

            <TextView
                android:id="@+id/img_item_donHang_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_item_donHang_coinRe"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_item_donHang"
                android:text="05/01/2003"
                android:textColor="#60605F" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>